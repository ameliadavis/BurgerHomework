<div class="uk-section">
    <div class="uk-container">

        <div uk-grid>
          <div></div>
            <img src="assets/Images/Burger.png" alt="Burger Icon">
            <h1>Eat-Da-Burger</h1>
          <div></div>
        </div>

        <div uk-grid>

          <div>
            <ul>
              {{#each burger}}
                {{#unless devour}}
                  <li>
                    {{name}}
                    <button class="devour" data-id="{{id}}" data-devour="{{devour}}">
                      DEVOUR IT!
                    </button>
                  </li>
                {{/unless}}
              {{/each}}
            </ul>
        </div>
        <div>
            <ul>
              {{#each burger}}
                {{#if devour}}
                     <li>
                    {{name}}
                  </li>
                {{/if}}
              {{/each}}
            </ul>
            </div>
        </div>

        <div uk-grid>
          <div></div>
            <h2>Add a Burger</h2>
              <form class="create-form">

                <div class="form-group">
                  <input type="textarea" id="burger" name="burger">
                  <button type="submit">Submit</button>
                <label for="burger">Ent                                                                                                                                                                                                                                                                                              er a Burger you want to eat</label>
              </form>
          <div></div>
        </div>
  </div>  
</div>  
